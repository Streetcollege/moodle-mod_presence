{{!
    @template mod_presence/rooms


}}
<div class="fullwidth mt-4">
    <h4>{{#str}}sessions, presence{{/str}}</h4>
    <div class="mt-3 clearfix">
        <div class="float-left mr-2">{{&curdatecontrols}}</div>
        <div class="float-left mr-2">
            <a href="{{&addsessionurl}}"><button class="btn btn-primary">{{#str}}addsession, presence{{/str}}</button></a>
        </div>
        <div class="float-left">{{&pagingcontrols}}</div>
    </div>
</div>
{{#sessionsbydate}}
    <h5 class="card-title mt-4">{{date}}</h5>
    {{#sessions}}
        <div class="card mt-3 bg-light shadow-sm">
            <div class="card-body p-2">
                <div class="float-left">
                    <div class="overflow-hidden text-nowrap bold" style="width:100%;">{{timefrom}} - {{timeto}}</div>
                    <div class="overflow-hidden text-nowrap">{{roomname}}</div>
                    <div class="">
                        {{#pix}}i/users, core, {{/pix}} {{bookings}}
                        {{#maxattendants}}
                            / {{maxattendants}}
                        {{/maxattendants}}
                    </div>
                </div>
                <div class="float-left ml-2">{{&description}}</div>
                <div class="float-right">
                {{#urldelete}}<a href="{{&urldelete}}"><button class="float-right btn btn-secondary m-2"><i class="fa fa-times"></i></button></a>{{/urldelete}}
                {{#urledit}}<a href="{{&urledit}}"><button class="float-right btn btn-secondary m-2"><i class="fa fa-pencil"></i></button></a>{{/urledit}}
<!--                <button class="float-right btn btn-primary m-2"><i class="fa fa-users"></i></button>-->
                </div>
            </div>
        </div>
    {{/sessions}}
{{/sessionsbydate}}
{{^sessionsbydate}}
    <div class="card bg-light p-2 mt-4 shadow-sm">
        <div class="card-body p-2 text-center">
        {{#str}}sessionnoneinspan, presence{{/str}}
        </div>
    </div>
{{/sessionsbydate}}


