{{!
    @template mod_presence/rooms



}}
<div class="fullwidth mt-4">
    <h4>{{#str}}evaluation, presence{{/str}}</h4>
    <div class="mt-3">
        <a href="{{&buttonurl}}">
            <button class="btn btn-secondary">{{buttoncaption}}</button>
        </a>
        <a href="{{&urlfinishall}}" class="ml-1">
            <button class="btn btn-primary">{{#str}}finishallevaluations, presence{{/str}}</button>
        </a>
    </div>
</div>

{{#sessionsbydate}}
    <h5 class="card-title mt-4">{{date}}</h5>
    {{#sessions}}
        <div class="card mt-3 bg-light shadow-sm">
            <div class="card-body p-2">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-3">
                        <div class="overflow-hidden text-nowrap bold" style="width:100%;">{{timefrom}} - {{timeto}}</div>
                        <div>{{teachername}}</div>
                        <div class="overflow-hidden text-nowrap">{{roomname}}</div>
                        <div class="">
                            {{#pix}}i/users, core, {{/pix}} {{bookings}}
                            {{#maxattendants}}
                                / {{maxattendants}}
                            {{/maxattendants}}
                        </div>

                    </div>
                    <div class="col-lg-7 col-md-5 col-sm-5">
                        <span class="bold">{{&description}}</span><br />
                        <span data-presence-book-names="{{id}}">
                            {{#attendants}}
                                <a href="{{&profileurl}}">{{firstname}} {{lastname}} {{idnumber}}</a>{{^islast}}, {{/islast}}
                            {{/attendants}}
                        </span>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-4 my-auto text-right">
                        {{#urlevaluate}}
                            <a href="{{&urlevaluate}}">
                                {{^evaluated}}
                                <button class="btn btn-primary align-middle my-auto">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                {{/evaluated}}
                                {{#evaluated}}
                                <button class="btn btn-secondary align-middle my-auto">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                {{/evaluated}}
                            </a>
                        {{/urlevaluate}}
                    </div>
                </div>
            </div>
        </div>
    {{/sessions}}
{{/sessionsbydate}}
{{^sessionsbydate}}
    <div class="card bg-light p-2 mt-4 shadow-sm">
        <div class="card-body p-2 text-center">
            {{#str}}sessionnoneinspan, presence{{/str}}
        </div>
    </div>
{{/sessionsbydate}}



