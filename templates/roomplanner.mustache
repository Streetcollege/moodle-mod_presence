{{!
    @template mod_presence/rooms



}}
<div class="fullwidth mt-4">
    <h4>{{#str}}roomplanner, presence{{/str}}</h4>
    <div class="mt-3 clearfix">
        <div class="float-left mr-2">{{&curdatecontrols}}</div>
<!--        <div class="float-left mr-2">
            <a href="{{&addsessionurl}}"><button class="btn btn-primary">{{#str}}addsession, presence{{/str}}</button></a>
        </div>-->
        <div class="float-left">{{&pagingcontrols}}</div>
    </div>
</div>

{{#hasrooms}}
<div style="overflow-x:auto">
    <!-- https://bootstrap-table.com/docs/extensions/fixed-columns/ //-->
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th scope="col">{{#str}}date{{/str}}</th>
            {{#roomslist}}
            <th style="min-width:300px; width:300px" scope="col">{{name}}</th>
            {{/roomslist}}
        </tr>
        </thead>
        <tbody>
        {{#roomplan}}
            <tr>
                <th scope="col" style="width:100px">{{date}}</th>
                {{#rooms}}
                <td>
                    {{#schedule}}
                        <div role="alert" class="alert alert-primary {{#collision}}alert-danger {{/collision}} mb-2 p-1">
                            <b>{{from}} - {{to}}</b> {{coursename}} {{description}}
                        </div>
                    {{/schedule}}
                </td>
                {{/rooms}}
            </tr>
        {{/roomplan}}
        </tbody>
    </table>
</div>
{{/hasrooms}}
{{^hasrooms}}
<div class="card bg-light p-2 mt-4 shadow-sm">
    <div class="card-body p-2 text-center">
        {{#str}}noroomsdefined, presence{{/str}}
    </div>
</div>
{{/hasrooms}}



