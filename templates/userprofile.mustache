{{!
    @template mod_attendance/rooms



}}
{{#user}}
<div id="mod_attendance_evaluation_list" class="hidden">
    <div class="fullwidth mt-4">
        <h4>{{#str}}userprofile, attendance{{/str}}</h4>
    </div>
    <input type="button" class="mt-3 btn btn-primary" value="{{#str}}back{{/str}}"/>
    <div class="card mt-3 bg-light shadow-sm">
        <div class="card-body p-2">
                <div class="float-left">
                    <img style="width:70px;height:70px;" class="rounded-circle border mr-2" src="{{picturebigurl}}" />
                </div>
                <div class="float-left">
                    <div class="overflow-hidden text-nowrap font-weight-bold">{{firstname}} {{lastname}}</div>
                    <div class="overflow-hidden text-nowrap">{{signedupsince}}</div>
                    <div class="overflow-hidden text-nowrap mt-1">
                        <a href="#" id="attendance_message_show"><i class="fa fa-envelope-o"></i> {{#str}}messageuser, attendance{{/str}}</a>
                    </div>
                </div>
        </div>
        <div class="card-body p-2 hidden" id="attendance_message_form">
            {{#str}}send_desc, attendance{{/str}}
            <textarea class="form-control mb-1" rows="5"></textarea>
            <button class="btn btn-secondary " type="button" id="attendance_message_cancel">
                <i class="fa fa-times"></i> {{#str}}cancel{{/str}}
            </button>
            <button class="btn btn-primary" type="button" id="attendance_message_send">
                <i class="fa fa-envelope-o"></i> {{#str}}send, attendance{{/str}}
            </button>
        </div>
    </div>
    <h5 class="mt-3">{{#str}}statusremark, attendance{{/str}}</h5>
    <div class="card mt-3 bg-light shadow-sm">
        <div class="card-body p-1">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="{{#str}}statusremark_placeholder, attendance{{/str}}"
                       aria-label="Recipient's username" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button">{{#str}}save{{/str}}</button>
                </div>
            </div>
        </div>
    </div>
    <h5 class="mt-3">{{#str}}strengths, attendance{{/str}}</h5>
    <div class="card mt-3 bg-light shadow-sm">
        <div class="card-body p-2">
            (requires addition of custom field to user table: https://docs.moodle.org/dev/Custom_fields_API)
        </div>
    </div>
    <h5 class="mt-3">{{#str}}sws, attendance{{/str}}</h5>
    <div class="card mt-3 bg-light shadow-sm">
        <div class="card-body p-2">
            {{swsshort}}: {{swslong}}
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                     aria-valuenow="{{sws}}" aria-valuemin="0" aria-valuemax="7" style="width: {{swspercent}}%"></div>
            </div>

        </div>
    </div>
    <h5 class="mt-3">{{#str}}remarks_course, attendance{{/str}}</h5>
    <div class="card mt-3 bg-light shadow-sm">
        <div class="card-body p-2">
            placeholder, placeholder, placeholder
        </div>
    </div>
    <div class="card mt-3 bg-light shadow-sm">
        <div class="card-body p-2">
            placeholder, placeholder, placeholder
        </div>
    </div>
    <h5 class="mt-3">{{#str}}attendance_course, attendance{{/str}}</h5>
    <div class="card mt-3 bg-light shadow-sm">
        <div class="card-body p-2">
            placeholder, placeholder, placeholder
        </div>
    </div>
    <input type="button" class="mt-3 btn btn-primary" value="{{#str}}back{{/str}}"/>
</div>
{{/user}}
{{^user}}
    <div class="card bg-light p-2 mt-4 shadow-sm">
        <div class="card-body p-2 text-center">
            {{#str}}usernotfound, attendance{{/str}}
        </div>
    </div>
{{/user}}

